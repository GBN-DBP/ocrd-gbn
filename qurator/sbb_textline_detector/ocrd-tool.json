{
  "version": "0.0.1",
  "git_url": "https://github.com/qurator-spk/sbb_textline_detection",
  "tools": {
    "ocrd-sbb-crop": {
      "executable": "ocrd-sbb-crop",
      "categories": [
        "Image preprocessing"
      ],
      "description": "Crops the image input to the page frame using deep learning and outputs a border polygon",
      "steps": [
        "preprocessing/optimization/cropping"
      ],
      "input_file_grp": [
        "OCR-D-IMG"
      ],
      "output_file_grp": [
        "OCR-D-CROP"
      ],
      "parameters": {
        "model": {
          "type": "string",
          "format": "file",
          "cacheable": true,
          "description": "Path to page cropping model to be used (See https://qurator-data.de/sbb_textline_detector/)"
        }
      }
    }
  }
}
